{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Mind Capsule",
  "version": "1.0.0",
  "identifier": "com.mindcapsule.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Mind Capsule",
        "width": 800,
        "height": 600,
        "maximized": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/32x32.png",
      "icons/1024x1024.png"
    ],
    "macOS": {
      "bundleName": "Mind Capsule"
    },
    "windows": {
      "nsis": {
        "startMenuFolder": "Mind Capsule"
      }
    }
  }
}
