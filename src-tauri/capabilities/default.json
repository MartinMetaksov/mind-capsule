{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "store:default",
    "fs:default",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write-recursive",
    {
      "identifier": "fs:allow-watch",
      "allow": [{ "path": "$HOME/**" }]
    },
    "fs:allow-unwatch"
  ]
}
